<p id="notice"><%= notice %></p>

<h1>Listing Packeges</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packeges.each do |packege| %>
      <tr>
        <td><%= packege.name %></td>
        <td><%= packege.details %></td>
        <td><%= packege.price %></td>
        <td><%= link_to 'Show', packege %></td>
        <td><%= link_to 'Edit', edit_packege_path(packege) %></td>
        <td><%= link_to 'Destroy', packege, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

