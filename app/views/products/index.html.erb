<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= link_to 'Show', local_business_product_path(@local_business, product) %></td>
        <td><%= link_to 'Edit', edit_local_business_product_path(@local_business , product) %></td>
        <td><%= link_to 'Destroy', local_business_products_path(@local_business, product), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

