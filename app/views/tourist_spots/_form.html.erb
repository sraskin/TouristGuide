<%= simple_form_for(@tourist_spot) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.label "Choose Division" %>
    <%= f.input :division_id, collection: @divisions, as: :select %>
    <%= f.label "Choose District" %>
    <%= f.input :district_id, collection: @districts, as: :select %>
    <%= f.label "Choose Thana" %>
    <%= f.input :thana_id, collection: @thanas, as: :select %>
    <%= f.input :name %>
    <%= f.file_field :place_image %>
    <%= f.input :place_details %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
